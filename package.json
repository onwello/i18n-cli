{
  "name": "@logistically/i18n-cli",
  "version": "1.0.0",
  "description": "Enterprise-grade CLI tool for extracting and managing translations in Logistically microservices",
  "main": "dist/index.js",
  "bin": {
    "translation-extract": "./dist/extract.js",
    "translation-generate": "./dist/generate.js",
    "translation-replace": "./dist/replace.js",
    "translation": "./dist/cli.js"
  },
  "scripts": {
    "build": "tsc",
    "dev": "ts-node src/cli.ts",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:enterprise": "jest src/__tests__/enterprise.spec.ts",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "clean": "rm -rf dist",
    "prepublishOnly": "npm run clean && npm run build",
    "security:audit": "npm audit",
    "security:fix": "npm audit fix",
    "performance:test": "npm run test -- --testNamePattern='Performance'",
    "validation:test": "npm run test -- --testNamePattern='Validation'"
  },
  "keywords": [
    "translation",
    "i18n",
    "internationalization",
    "cli",
    "extract",
    "generate",
    "microservices",
    "nestjs",
    "typescript",
    "logistically"
  ],
  "author": "Logistically Team",
  "license": "MIT",
  "dependencies": {
    "glob": "^10.3.10",
    "commander": "^11.1.0",
    "chalk": "^5.3.0",
    "ora": "^7.0.1",
    "inquirer": "^9.2.12",
    "fs-extra": "^11.2.0"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@types/glob": "^8.1.0",
    "@types/fs-extra": "^11.0.4",
    "@types/inquirer": "^9.0.7",
    "@types/jest": "^29.5.8",
    "@typescript-eslint/eslint-plugin": "^6.13.0",
    "@typescript-eslint/parser": "^6.13.0",
    "eslint": "^8.54.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "typescript": "^5.3.2"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/logistically/i18n-cli.git"
  },
  "bugs": {
    "url": "https://github.com/logistically/i18n-cli/issues"
  },
  "homepage": "https://github.com/logistically/i18n-cli#readme"
}
